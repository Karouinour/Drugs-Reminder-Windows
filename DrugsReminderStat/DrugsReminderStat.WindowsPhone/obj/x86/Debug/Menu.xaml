<Page
    x:Class="DrugsReminderStat.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrugsReminderStat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   >
    <Page.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="Assets/bg.jpg"/>
    </Page.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>

        </Grid.RowDefinitions>
        
        <TextBlock  TextWrapping="Wrap" Text="Drugs Reminder"  FontSize="36" Width="300" Height="50" Margin="10,0,0,0" Foreground="#FF205144" FontWeight="Bold"/>

        <Border Grid.Row="1" Width="200" Height="60" BorderThickness="2" BorderBrush="White">
            <StackPanel  Orientation="Horizontal">
                <Image  Width="50" Height="50"  Source="Assets/user.png" Margin="10,0,0,0"/>
                <TextBlock  TextWrapping="Wrap" Text="Curent user"  FontSize="24" Height="30" Margin="10,0,0,0" Foreground="#FF080808"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
            <Border x:ConnectionId='1' Width="130" Grid.Row="0" Grid.Column="0" Height="130" BorderThickness="2" BorderBrush="White"                             >
                <StackPanel  Orientation="Vertical">
                    <Image  Width="70" Height="70"  Source="Assets/ic_action_users2.png" Margin="10,10,0,0"/>
                    <TextBlock VerticalAlignment="Center" Width="80" TextWrapping="Wrap" Text="Users"  FontSize="24" Margin="10,0,0,0" Foreground="Black"/>
                </StackPanel>
            </Border>
            <Border x:ConnectionId='2' Width="130" Grid.Row="0" Grid.Column="1" Height="130" BorderThickness="2" BorderBrush="White"                               >
                <StackPanel  Orientation="Vertical">
                    <Image  Width="70" Height="70"  Source="Assets/ic_action_add_user3.png" Margin="10,10,0,0"/>
                    <TextBlock VerticalAlignment="Center" Width="100" TextWrapping="Wrap" Text="Add user"  FontSize="24" Margin="10,0,0,0" Foreground="Black"/>
                </StackPanel>
            </Border>
            <Border x:ConnectionId='3' Width="130" Grid.Row="1" Grid.Column="0" Height="130" BorderThickness="2" BorderBrush="White"                               >
                <StackPanel  Orientation="Vertical">
                    <Image  Width="70" Height="70"  Source="Assets/ic_action_adddrugs4.png" Margin="10,10,0,0"/>
                    <TextBlock VerticalAlignment="Center" Width="110" TextWrapping="Wrap" Text="Add drug"  FontSize="24" Margin="10,0,0,0" Foreground="Black"/>
                </StackPanel>
            </Border>
            <Border Width="130" Grid.Row="1" Grid.Column="1" Height="130" BorderThickness="2" BorderBrush="White">
                <StackPanel  Orientation="Vertical">
                    <Image  Width="70" Height="70"  Source="Assets/warning.png" Margin="10,10,0,0"/>
                    <TextBlock VerticalAlignment="Center" Width="130" TextWrapping="Wrap" Text="Precautions"  FontSize="24" Margin="0,0,0,0" Foreground="Black"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

