<Page
    x:Class="DrugsReminderStat.AddDrugMouth"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrugsReminderStat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Page.BottomAppBar>
        <CommandBar Background="#CC03A678">
            <AppBarButton x:ConnectionId='1' Name="next" Label="Next"  Icon="Next"                    />
        </CommandBar>
    </Page.BottomAppBar>


    <Grid  Background="#FFDAD7D7">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2.8*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock Text="DrugsReminder" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0" Foreground="#FF009688"/>
            <TextBlock Text="Add Drug" Margin="0,-6.5,0,26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" Foreground="#FF009688" FontWeight="Bold"/>
        </StackPanel>



        <StackPanel Grid.Row="1" Orientation="Vertical">

            <TextBlock Text="Months" Margin="20,0,0,0" Style="{StaticResource BaseTextBlockStyle}" Foreground="Black"/>

            <RadioButton Content="1 month" Name="un" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF232121" Margin="40,0,0,0" BorderBrush="#FF009688" Background="#FFD1D1D1"/>
            <RadioButton Content="2 months" Name="deux" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF232121" Margin="40,0,0,0" BorderBrush="#FF009688" Background="#FFD1D1D1"/>
            <RadioButton Content="3 months" Name="trois" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF232121" Margin="40,0,0,0" BorderBrush="#FF009688" Background="#FFD1D1D1"/>
            <RadioButton Content="4 months" Name="qutre" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF232121" Margin="40,0,0,0" BorderBrush="#FF009688" Background="#FFD1D1D1"/>
            <RadioButton Content="5 months" Name="cinque" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF232121" Margin="40,0,0,0" BorderBrush="#FF009688" Background="#FFD1D1D1"/>
            
            <RadioButton Content="6 months" Name="six" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF232121" Margin="40,0,0,0" BorderBrush="#FF009688" Background="#FFD1D1D1"/>

        </StackPanel>


    </Grid>

</Page>

